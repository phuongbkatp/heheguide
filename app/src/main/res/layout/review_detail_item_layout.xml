<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="7dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp">


            <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/image_people"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/txt_place_name"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"

                app:riv_border_color="@color/white"
                app:riv_border_width="0dip"

                app:riv_corner_radius="60dip"
                app:riv_mutate_background="true"
                app:riv_oval="false" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingBottom="4dp"
                android:paddingLeft="6dp"
                android:paddingTop="4dp">

                <com.haris.navigato.TextviewUtil.UbuntuMediumTextview
                    android:id="@+id/txt_person_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Haris Farooq"
                    android:textColor="@color/lightBlue"
                    android:textSize="@dimen/_11sdp" />

                <android.support.v7.widget.AppCompatRatingBar
                    android:id="@+id/rating"
                    style="@style/Base.Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="-6dp"
                    android:rating="4.5"
                    android:scaleX="0.8"
                    android:scaleY="0.8" />


                <com.haris.navigato.TextviewUtil.ExpandableTextView
                    android:id="@+id/txt_review_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="4dp"
                    android:textColor="@color/lightBlue"
                    android:textSize="@dimen/_10sdp" />


            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>