<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/card_history"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_above="@+id/card_start_org"
        android:clickable="true"
        app:cardCornerRadius="7dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.haris.navigato.TextviewUtil.UbuntuMediumTextview
                    android:id="@+id/txt_route"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="Route 1"
                    android:textColor="@color/lightBlue"
                    android:textSize="@dimen/_9sdp" />

                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/lightBlue" />


                <com.haris.navigato.TextviewUtil.UbuntuMediumTextview
                    android:id="@+id/txt_conveyance"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="Route 1"
                    android:textColor="@color/lightBlue"
                    android:textSize="@dimen/_9sdp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/lightBlue" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp">


                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/flag_icon" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical">


                        <com.haris.navigato.TextviewUtil.UbuntuRegularTextview
                            android:id="@+id/label_from"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/from_label"
                            android:textColor="@color/skyBlue"
                            android:textSize="@dimen/_8sdp" />


                        <com.haris.navigato.TextviewUtil.UbuntuMediumTextview
                            android:id="@+id/txt_from"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="York St"
                            android:textColor="@color/lightBlue"
                            android:textSize="@dimen/_9sdp" />


                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/lightBlue" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp">


                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/flag_icon" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical">


                        <com.haris.navigato.TextviewUtil.UbuntuRegularTextview
                            android:id="@+id/label_to"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/to_label"
                            android:textColor="@color/skyBlue"
                            android:textSize="@dimen/_8sdp" />


                        <com.haris.navigato.TextviewUtil.UbuntuMediumTextview
                            android:id="@+id/txt_to"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="York St"
                            android:textColor="@color/lightBlue"
                            android:textSize="@dimen/_9sdp" />


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/lightBlue" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp">


                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/location_icon"
                        android:tint="@color/lightBlue" />


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp">


                        <com.haris.navigato.TextviewUtil.UbuntuMediumTextview
                            android:id="@+id/txt_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="14dp"
                            android:text="15 Km"
                            android:textColor="@color/lightBlue"
                            android:textSize="@dimen/_9sdp" />


                        <com.haris.navigato.TextviewUtil.UbuntuRegularTextview
                            android:id="@+id/label_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_distance"
                            android:text="@string/distance_label"
                            android:textColor="@color/skyBlue"
                            android:textSize="@dimen/_8sdp" />


                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp">


                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/time_icon"
                        android:tint="@color/lightBlue" />


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp">


                        <com.haris.navigato.TextviewUtil.UbuntuMediumTextview
                            android:id="@+id/txt_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="14dp"
                            android:text="20 min"
                            android:textColor="@color/lightBlue"
                            android:textSize="@dimen/_9sdp" />


                        <com.haris.navigato.TextviewUtil.UbuntuRegularTextview
                            android:id="@+id/label_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_time"
                            android:text="@string/time_label"
                            android:textColor="@color/skyBlue"
                            android:textSize="@dimen/_8sdp" />


                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp">


                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/petrol_icon"
                        android:tint="@color/lightBlue" />


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp">


                        <com.haris.navigato.TextviewUtil.UbuntuMediumTextview
                            android:id="@+id/txt_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="14dp"
                            android:text="2 litre"
                            android:textColor="@color/lightBlue"
                            android:textSize="@dimen/_9sdp" />


                        <com.haris.navigato.TextviewUtil.UbuntuRegularTextview
                            android:id="@+id/label_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_price"
                            android:text="@string/petrol_label"
                            android:textColor="@color/skyBlue"
                            android:textSize="@dimen/_8sdp" />


                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>